{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<style>
    .example-wrapper { background-color: #F3F3F3; border: 2px solid rgba(36, 40, 97, .2) ; padding: 25px; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="example-wrapper">
    <a class="return-to-list-link" href="{{ path('app_article_index') }}">Retourner visualiser toutes les listes.</a>
    <div class="title-admin-show">
       <h1>
        Article num√©ro {{article.id}}
        </h1>
        <img class="title-admin-icon" src="{{ asset('images/edit-icon.jpg') }}" alt="crayon sous forme d'icon"/>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions-td">
        <a class="edit-link-crud" href="{{ path('app_article_edit', {'id': article.id}) }}">Editer cette liste.</a>
    </div>
    {{ include('article/_delete_form.html.twig') }}
</div>
{% endblock %}
