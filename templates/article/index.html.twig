{% extends 'base.html.twig' %}

{% block title %}Liste d'articles{% endblock %}

{% block body %}
<style>
    .example-wrapper { background-color: #F3F3F3; border: 2px solid rgba(36, 40, 97, .2) ; padding: 25px; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="example-wrapper">
    <a class="create-link-crud" href="{{ path('app_article_new') }}">Créer un nouvel article.</a>
    <h1 class="title-admin">
    Liste des articles disponibles
    <img class="title-admin-icon" src="{{ asset('images/article-icon.png') }}" alt="article sous forme d'icon"/>
    </h1>
    <table class="table">
        <thead>
            <tr>
                <th>Prix</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.prix }}</td>
                <td>{{ article.nom }}</td>
                <td>{{ article.categorie.nom }}</td>
                <td class="actions-td">
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">
                    <span>Voir</span>
                    <img class="see-img-crud" src="{{ asset('images/eye-icon.jpg') }}" alt="eye icon oeil icon">
                    </a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">
                     <span>Modifier</span>
                    <img class="see-img-crud" src="{{ asset('images/edit-icon.jpg') }}" alt="edit icon modifier icon">
                    </a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'y a aucun enregistrement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
