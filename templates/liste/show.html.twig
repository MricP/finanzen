{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/list-details.js') }}"></script>
    <script src="{{ asset('js/add-articles-in-list.js') }}"></script>
    <script src="{{ asset('js/delete-articles-in-list.js') }}"></script>
{% endblock %}


{% block body %}
    <div id="specific-list-container">
        <div class="ajout-articles">
            <button class="add-button-modal">
                <img src="{{ asset('images/liste-articles.svg') }}" alt="fond du bouton"/>
                <span>
                    <img src="{{ asset('images/plus-icon.png') }}" alt="icon plus"/>
                </span>
            </button>
        {{ component('ButtonAjoutListe', { articles: articles }) }}
        </div>
        <div id="list">
            <h1>Finanzen</h1>
            <p>{{ liste.nom }}</p>
            <p>{{ liste.dateCreation|date('d M Y')}}</p>

            <ul id="headers">
                <li>Nom</li>
                <li>QTE</li>
                <li>Prix</li>
            </ul>

            <div id="list-items">
                <ul id="items">
                    {% for item in liste.listeArticles %}
                        <li class="item" data-id="{{ item.id }}">
                            <p>{{ item.articles.nom }}</p>
                            <input value="{{ item.quantite }}"/>
                            <p class="price-per-unit" style="display: none;">{{ item.articles.prix }}</p>
                            <p class="total-price">{{ item.articles.prix * item.quantite }}€</p>
                            
                            <form method="post" 
                                action="{{ path('app_liste_article_delete', {'id': item.id}) }}" 
                                class="delete-form"
                                onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                <button type="submit" class="delete-article-liste-btn">
                                    <svg class="trash" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M4 6H20M16 6L15.7294 5.18807C15.4671 4.40125 15.3359 4.00784 15.0927 3.71698C14.8779 3.46013 14.6021 3.26132 14.2905 3.13878C13.9376 3 13.523 3 12.6936 3H11.3064C10.477 3 10.0624 3 9.70951 3.13878C9.39792 3.26132 9.12208 3.46013 8.90729 3.71698C8.66405 4.00784 8.53292 4.40125 8.27064 5.18807L8 6M18 6V16.2C18 17.8802 18 18.7202 17.673 19.362C17.3854 19.9265 16.9265 20.3854 16.362 20.673C15.7202 21 14.8802 21 13.2 21H10.8C9.11984 21 8.27976 21 7.63803 20.673C7.07354 20.3854 6.6146 19.9265 6.32698 19.362C6 18.7202 6 17.8802 6 16.2V6M14 10V17M10 10V17" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
                                </button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <hr>
            <div id="total">
                {% set total = 0 %}
                {% for item in liste.listeArticles %}
                    {% set total = total + item.articles.prix*item.quantite %}
                {% endfor %}
                <p>TOTAL</p>
                <p>{{ total }}€</p>
            </div>

            <hr>

            <div id="details">
                <p>CARD # : **** **** 2025</p>
                <p>AUTH CODE : 127181</p>
                <p>CARDHOLDER : {{ app.user.pseudo }}</p>
            </div>

            <div id="footer">
                <p>MERCI DE VOTRE VISITE</p>
                <img id="barcode" src="{{ asset('/images/barcode.png') }}">
                <p>finanzen.com</p> {#adapter l'url#}
{#                logo#}
            </div>
    </div>
    <div id="specific-list-links">
        <a id="back" href="{{ path('app_home') }}">Retourner à l'accueil</a>
        {{ include('liste/_delete_form.html.twig') }}
        <a href="{{ path('app_liste_edit', {'id': liste.id}) }}">Modifier</a>
    </div>

{% endblock %}