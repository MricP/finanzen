{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<style>
    .example-wrapper { background-color: #F3F3F3; border: 2px solid rgba(36, 40, 97, .2) ; padding: 25px; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="example-wrapper">
    <a class="return-to-list-link" href="{{ path('app_categorie_index') }}">Retourner visualiser tous les catégories.</a>
    <div class="title-admin-show">
       <h1>
        Catégorie numéro {{categorie.id}}
        </h1>
        <img class="title-admin-icon" src="{{ asset('images/edit-icon.jpg') }}" alt="crayon sous forme d'icon"/>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>


        <a class="edit-link-crud" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Editer cette catégorie.</a>

    {{ include('categorie/_delete_form.html.twig') }}
</div>
{% endblock %}
