{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<style>
    .example-wrapper { background-color: #F3F3F3; border: 2px solid rgba(36, 40, 97, .2) ; padding: 25px; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>
<div class="example-wrapper">
    <h1 class="title-admin">
        Liste des catégories disponibles
        <img class="title-admin-icon" src="{{ asset('images/categorie-icon.png') }}" alt="categorie sous forme d'icon"/>
    </h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td class="actions-td">
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">
                    <span>Voir</span>
                    <img class="see-img-crud" src="{{ asset('images/eye-icon.jpg') }}" alt="eye icon oeil icon">
                    </a>
                    <a  class="edit-img-crud" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
                    <span>Modifier</span>
                    <img class="see-img-crud" src="{{ asset('images/edit-icon.jpg') }}" alt="edit icon modifier icon">
                    </a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="create-link-crud" href="{{ path('app_categorie_new') }}">Créer une nouvelle catégorie.</a>
</div>
{% endblock %}
